    "version": "0.2.0",
    "configurations": [
        {
            "name": "train (linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/c++/bin/train",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            //"preLaunchTask": "build-linux",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "current",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python"
            }
        },
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/train.py",
            "cwd": "${workspaceFolder}/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python"
            }
        },
        {
            "name": "play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/ui/play.py",
            "cwd": "${workspaceFolder}/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python"
            }
        },
        {
            "name": "mcts",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/package/mcts.py",
            "cwd": "${workspaceFolder}/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python"
            }
        }
    ]
}