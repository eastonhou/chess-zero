{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/c++"
    },
    "tasks": [
        {
            "label": "build-linux",
            "type": "shell",
            "command": "make",
            "args": [
                "build=debug",
                "--file=${workspaceFolder}/c++/Makefile",
                "train"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "make",
            "args": [
                "build=release",
                "--file=${workspaceFolder}/c++/Makefile",
                "train"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}